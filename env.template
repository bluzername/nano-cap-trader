# Required API Keys
POLYGON_API_KEY=your_polygon_api_key_here

# Optional API Keys (for enhanced features)
ORTEX_KEY=your_ortex_key_here
FINNHUB_API_KEY=your_finnhub_key_here
FMP_API_KEY=your_fmp_key_here

# Enhanced Insider Trading Data APIs (for advanced strategies)
FINTEL_API_KEY=your_fintel_api_key_here  # $49/month - institutional data
WHALEWISDOM_API_KEY=your_whalewisdom_api_key_here  # $99/month - 13F filings
TRADIER_API_KEY=your_tradier_api_key_here  # Options flow data
BENZINGA_API_KEY=your_benzinga_api_key_here  # News and options flow

# Data Source Configuration
USE_ORTEX=false  # Set to true to use paid Ortex data instead of free sources
DB_URL=sqlite:///data.db

# Trading Configuration (optional overrides)
MAX_POSITION_VALUE=15000.0
MAX_PORTFOLIO_VALUE=1000000.0

# Signal Weights (optional overrides)
INSIDER_WEIGHT=0.30
GAPREV_WEIGHT=0.10
ALT_GROWTH_WEIGHT=0.25
SHORT_WEIGHT=0.15
MOMO_WEIGHT=0.20

# News API Keys (optional for enhanced momentum signals)
NEWSAPI_KEY=your_newsapi_key_here
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Strategy Selection (comma-separated)
# Available: statistical_arbitrage,momentum,mean_reversion,multi_strategy,insider_momentum_advanced,insider_options_flow,insider_ml_predictor
ENABLED_STRATEGIES=multi_strategy

# Strategy-Specific Parameters
MOMENTUM_VOLUME_THRESHOLD=3.0
STAT_ARB_CORRELATION_THRESHOLD=0.8
MEAN_REV_BB_STD_DEV=2.0

# Multi-Strategy Weights (should sum to 1.0)
MULTI_STAT_ARB_WEIGHT=0.60
MULTI_MOMENTUM_WEIGHT=0.25
MULTI_MEAN_REV_WEIGHT=0.15

# Risk Management
ENABLE_POSITION_SIZING=true
ENABLE_STOP_LOSS=true
MAX_VOLUME_PCT=0.03

# Remote Access Security (optional)
ENABLE_AUTH=false  # Set to true to require HTTP Basic auth
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme123  # CHANGE THIS!
ALLOWED_IPS=  # Comma-separated IPs/CIDR (e.g., 192.168.1.0/24,10.0.0.1)
RATE_LIMIT=100  # Requests per minute per IP